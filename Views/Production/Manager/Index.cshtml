@{
    Layout = "~/Views/Shared/_App_Layout.cshtml";
}

<div class="w-full bg-base-100 p-6 rounded-xl mt-5">
    <input type="checkbox" id="form_modal" class="modal-toggle" />
    <div class="modal" role="dialog">
        <div class="modal-box max-w-xl">
            <h3 class="font-bold text-lg">Review Job Order</h3>
            <form>
                <div class="form-control my-3">
                    <label for="machine">Select Machine</label>
                    <select disabled class="select select-bordered w-full mt-1" id="machine" name="machine">
                        <option disabled selected>CNC Tools</option>
                        <option>3D Printer</option>
                    </select>
                </div>
                <div class="form-control my-3">
                    <label for="reported">Reported By</label>
                    <select disabled class="select select-bordered w-full text-black mt-1" id="reported" name="reported">
                        <option disabled selected>Bayu Purnama</option>
                    </select>
                </div>
                <div class="form-control my-3">
                    <label for="status">Current Status</label>
                    <select disabled class="select select-bordered w-full mt-1" id="status" name="status">
                        <option disabled selected>Pending</option>
                        <option>Progress</option>
                        <option>Completed</option>
                    </select>
                </div>
                <div class="form-control my-3">
                    <label for="location">Description</label>
                    <textarea disabled id="description" name="description" class="textarea textarea-bordered w-full" placeholder="Enter cases's description"></textarea>
                </div>
                <div class="form-control my-3">
                    <label for="schedule_by">Schedule By</label>
                    <input id="schedule_by" type="text" disabled value="Mohammad Bayu (Production Manager (Me))" class="input input-bordered w-full" />
                </div>
                <div class="form-control my-3">
                    <label for="schedule">Schedule At</label>
                    <input id="schedule" type="date" class="input input-bordered w-full" />
                </div>
            </form>
            <div class="modal-action">
                <label for="form_modal" class="btn">Cancel</label>
                <button class="btn btn-primary text-white">Send to MTC</button>
            </div>
        </div>
    </div>

    <input type="checkbox" id="delete_modal" class="modal-toggle" />
    <div class="modal" role="dialog">
        <div class="modal-box">
            <h3 class="font-bold text-lg">Delete Case ?</h3>
            <p class="text-sm">The case data will be deleted permanently</p>
            <div class="modal-action">
                <label for="delete_modal" class="btn">Cancel</label>
                <button class="btn btn-error text-white">Delete</button>
            </div>
        </div>
    </div>

