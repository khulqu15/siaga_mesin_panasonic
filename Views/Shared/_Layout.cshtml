<!DOCTYPE html>
<html data-theme="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - panasonic_machine_checker</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.3/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="drawer">
        <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
            <div class="w-full navbar bg-base-100 shadow">
                <div class="flex-none lg:hidden">
                    <label for="my-drawer-3" aria-label="open sidebar" class="btn btn-square btn-ghost">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                    </label>
                </div>
                <div class="flex-1 px-2 mx-2">
                    <img src="@Url.Content("~/Assets/Images/panasonic.png")" class="h-8"/>
                </div>
                <div class="flex-none hidden lg:block">
                    <ul class="menu menu-horizontal">
                        <li><a class="@isActive("Home", "Index")" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="@isActive("Home", "Privacy")" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                </div>
            </div>
            <div class="w-full lg:px-12 px-8 min-h-[80vh] grid grid-cols-1 items-center justify-center">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <footer class="footer">
                <div class="flex items-center p-7">
                    &copy; 2024 - Panasonic - <a class="text-primary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
        <div class="drawer-side">
            <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label>
            <ul class="menu p-4 w-80 min-h-full bg-base-200">
                <li><a class="@isActive("Home", "Index")" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a class="@isActive("Home", "Privacy")" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
            </ul>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@functions {
    public string isActive(string controller, string action)
    {
        var routeData = Context.GetRouteData();
        var routeController = routeData.Values["controller"].ToString();
        var routeAction = routeData.Values["action"].ToString();
        return (controller == routeController && action == routeAction) ? "bg-primary/10 text-primary" : "";
    }
}